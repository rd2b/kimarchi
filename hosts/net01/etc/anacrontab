# /etc/anacrontab: configuration file for anacron

# See anacron(8) and anacrontab(5) for details.

SHELL=/bin/sh
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
# the maximal random delay added to the base delay of the jobs
RANDOM_DELAY=5
# the jobs will be started during the following hours only
START_HOURS_RANGE=3-22

#period in days   delay in minutes   job-identifier   command
1	5	cron.daily		nice run-parts /etc/cron.daily
7	25	cron.weekly		nice run-parts /etc/cron.weekly
@monthly 45	cron.monthly		nice run-parts /etc/cron.monthly


btrfsrotate="/usr/local/bin/btrfsrotate" 
# Daily snapshots                                                               
1 1 snap.datadaily       $btrfsrotate -b /data           -c 5 -t "Daily"             
1 5 snap.devdaily        $btrfsrotate -b /data/Dev       -c 5 -t "Daily"             
1 5 snap.musiquedaily    $btrfsrotate -b /data/Musique   -c 5 -t "Daily"             
1 5 snap.videodaily      $btrfsrotate -b /data/Videos    -c 5 -t "Daily"             
1 5 snap.photodaily      $btrfsrotate -b /data/Photos    -c 5 -t "Daily"             
1 5 snap.savesdaily      $btrfsrotate -b /data/Saves     -c 5 -t "Daily"             
1 5 snap.dropboxdaily    $btrfsrotate -b /data/Dropbox   -c 5 -t "Daily" -d "/data/.snapshots"
                                                                                 
                                                                                 # Weekly snapshots                                                              
## Weekly snapshots                                                               
7 6 snap.dataweekly       $btrfsrotate -b /data           -c 5 -t "Weekly"            
7 6 snap.devweekly        $btrfsrotate -b /data/Dev       -c 5 -t "Weekly"            
7 6 snap.musiqueweekly    $btrfsrotate -b /data/Musique   -c 5 -t "Weekly"            
7 6 snap.videoweekly      $btrfsrotate -b /data/Videos    -c 5 -t "Weekly"            
7 6 snap.photoweekly      $btrfsrotate -b /data/Photos    -c 5 -t "Weekly"            
7 6 snap.savesweekly      $btrfsrotate -b /data/Saves     -c 5 -t "Weekly"            
7 6 snap.dropboxweekly    $btrfsrotate -b /data/Dropbox   -c 5 -t "Weekly" -d "/data/.snapshots"


