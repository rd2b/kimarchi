bundle agent pkg
{
vars:

  any::
  "packages"  slist  => { "screen",
                          "vim",
                          "rsync",
                          "man",
                          "manpages",
                          "tree" };

packages:

  any::
  "$(packages)"
    comment => "install $(packages)",
    package_policy   => "add",
    package_method   => generic;
}
