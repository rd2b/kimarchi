bundle agent pkg
{
vars:
    any::
        "packages"  slist  => { "screen",
            "vim",
            "rsync",
            "man",
            "manpages",
            "tree",
            "update-manager-core"
        };

packages:
    CFpackages::
        "$(packages)"
        comment => "install $(packages)",
                package_policy   => "add",
                package_method   => generic;
}
